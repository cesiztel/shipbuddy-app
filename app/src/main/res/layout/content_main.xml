<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Open missions -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:text="Open"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:id="@+id/open_missions_text"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/view"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mission_mannheim"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/colorSecondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/open_mission"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/destination_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="18sp"
                            android:paddingStart="16dp"
                            android:textStyle="bold"
                            android:text="Destination:"/>

                    <TextView
                            android:id="@+id/destination_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/black"
                            android:text="Mannheim Harbour"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                    <TextView
                            android:id="@+id/arrival_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="ETA:"/>

                    <TextView
                            android:id="@+id/arrival_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/black"
                            android:text="25th September 2019 12:30"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Closed missions -->
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:text="Close"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:id="@+id/close_missions_text"/>

        <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:id="@+id/close_missions_validator"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mission_rotterdam"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/colorSecondary">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/open_mission"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/close_trip_1_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="18sp"
                            android:paddingStart="16dp"
                            android:textStyle="bold"
                            android:text="Destination:"/>

                    <TextView
                            android:id="@+id/close_trip_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/black"
                            android:text="Rotterdam Harbour"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                    <TextView
                            android:id="@+id/arrival_close_1_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Arrival:"/>

                    <TextView
                            android:id="@+id/arrival_close_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/black"
                            android:text="15th August 2019 17:30"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mission_amsterdam"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/colorSecondary">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/open_mission"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/close_trip_2_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="18sp"
                            android:paddingStart="16dp"
                            android:textStyle="bold"
                            android:text="Destination:"/>

                    <TextView
                            android:id="@+id/close_trip_2_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/black"
                            android:text="Amsterdam Harbour"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                    <TextView
                            android:id="@+id/arrival_close_2_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Arrival:"/>

                    <TextView
                            android:id="@+id/arrival_close_2_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/black"
                            android:text="21th July 2019 20:30"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>